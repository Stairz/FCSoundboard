<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScrollTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        style="@style/PageTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <Button
            android:id="@+id/button_hello"
            style="@style/PageButton"
            android:layout_alignParentTop="true"
            android:text="@string/boma_hello"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/button_crack"
            style="@style/PageButton"
            android:layout_below="@+id/button_hello"
            android:text="@string/boma_crack"
            android:textAllCaps="true" />
        
    </RelativeLayout>
</ScrollView>